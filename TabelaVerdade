# conjunção = e = and = ∧

# disjunção = ou = or = V

# negação = não = not = -

# bicondicional = == = ⇔

# condicional = ⮕

# Definindo conectivos básicos
def conjuncao(p, q):
  return p and q
def disjuncao(p, q):
  return p or q
def condicional(p, q):
  return (not p) or q
def bicondicional(p, q):
  return p == q
def negacao(p):
  return not p

# Geração automática de tabela-verdade
valores = [True, False]
print("p    |  q   |p -> q| not p")
for p in valores:
  for q in valores:
   print(p, "|", q, "|", condicional(p, q), "|", negacao(p))
